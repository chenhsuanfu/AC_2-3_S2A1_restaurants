<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="btn btn-secondary" type="submit" id="search-button"><i class="fas fa-search"></i>Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<ul>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row row-cols-1 row-cols-sm-3">
          {{#each RL_data}}
          <li>
            <div class="col">
              <div class="card mb-1">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body p-3">
                  <h6 class="card-title mb-1 text-secondary">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>

                  <span class="badge rounded-pill text-bg-danger">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
                <div class="card-footer d-flex justify-content-end flex-wrap">
                  <a href="./RL_data/{{ this._id }}/edit" class="text-secondary"><button type="button"
                      class=" btn btn-warning btn-sm">Edit</button></a>
                  <a href="./RL_data/{{ this._id }}" class="text-secondary"><button type="button"
                      class=" btn btn-success btn-sm">Detail</button></a>
                  <form action="./RL_data/{{ this._id }}/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
                  </form>
                </div>

              </div>
            </div>
          </li>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</ul>

